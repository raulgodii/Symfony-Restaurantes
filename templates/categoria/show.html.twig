{% extends 'base.html.twig' %}

{% block title %}Categoria{% endblock %}

{% block body %}
    <div style="max-width: 800px; margin: 0 auto; padding: 20px;">
        <h1 style="color: #333;">Categoria</h1>

        <table style="width: 100%; border-collapse: collapse; margin-top: 20px;">
            <tbody>
                <tr>
                    <th style="border: 1px solid #ccc; padding: 10px;">Id</th>
                    <td style="border: 1px solid #ccc; padding: 10px;">{{ categorium.id }}</td>
                </tr>
                <tr>
                    <th style="border: 1px solid #ccc; padding: 10px;">Nombre</th>
                    <td style="border: 1px solid #ccc; padding: 10px;">{{ categorium.Nombre }}</td>
                </tr>
                <tr>
                    <th style="border: 1px solid #ccc; padding: 10px;">Descripcion</th>
                    <td style="border: 1px solid #ccc; padding: 10px;">{{ categorium.Descripcion }}</td>
                </tr>
            </tbody>
        </table>

        <div style="margin-top: 20px;">
            <a href="{{ path('home') }}" style="text-decoration: none; color: #fff; background-color: #5cb85c; padding: 8px 15px; border-radius: 3px;">Volver al inicio</a>
            <a href="{{ path('app_categoria_index') }}" style="text-decoration: none; color: #fff; background-color: #5cb85c; padding: 8px 15px; border-radius: 3px;">Gestionar categorias</a>
        </div>

    </div>
{% endblock %}
