{% extends 'base.html.twig' %}

{% block title %}Restaurante index{% endblock %}

{% block body %}
    <h1>Restaurante index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Email</th>
                <th>Password</th>
                <th>Roles</th>
                <th>CP</th>
                <th>Pais</th>
                <th>Direccion</th>
                <th>IsVerified</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for restaurante in restaurantes %}
            <tr>
                <td>{{ restaurante.id }}</td>
                <td>{{ restaurante.nombre }}</td>
                <td>{{ restaurante.email }}</td>
                <td>{{ restaurante.password }}</td>
                <td>{{ restaurante.roles ? restaurante.roles|json_encode : '' }}</td>
                <td>{{ restaurante.CP }}</td>
                <td>{{ restaurante.Pais }}</td>
                <td>{{ restaurante.Direccion }}</td>
                <td>{{ restaurante.isVerified ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_restaurante_show', {'id': restaurante.id}) }}">show</a>
                    <a href="{{ path('app_restaurante_edit', {'id': restaurante.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_register') }}">Create new</a>
{% endblock %}
